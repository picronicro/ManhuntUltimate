<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/0.8/owo-ui.xsd">

<components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <!-- title -->
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text>Manhunt configuration</text>
                                    <color>#000000</color>
                                </label>
                            </children>

                            <!--<sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>-->
                            <horizontal-alignment>center</horizontal-alignment>
                        </flow-layout>

                        <!-- buttons -->
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="btn_add_runners">
                                    <text>âŒ›</text>
                                    <sizing>
                                        <horizontal method="fixed">20</horizontal>
                                    </sizing>
                                </button>
                                <label id="label_runners">
                                    <text>Add runners</text>
                                    <color>#000000</color>
                                    <margins>
                                        <left>4</left>
                                    </margins>
                                </label>
                            </children>

                            <margins>
                                <top>6</top>
                            </margins>
                            <vertical-alignment>center</vertical-alignment>
                            <tooltip-text>these players are runners</tooltip-text>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <button id="btn_add_hunters">
                                    <text>ğŸ—¡</text>
                                    <sizing>
                                        <horizontal method="fixed">20</horizontal>
                                    </sizing>
                                </button>
                                <label id="label_hunters">
                                    <text>Add hunters</text>
                                    <color>#000000</color>
                                    <margins>
                                        <left>4</left>
                                    </margins>
                                </label>
                            </children>

                            <margins>
                                <top>4</top>
                            </margins>
                            <vertical-alignment>center</vertical-alignment>
                            <tooltip-text>these players are hunters</tooltip-text>
                        </flow-layout>

                        <!-- change start mode button -->
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="btn_start_mode">
                                    <text>âš‘</text>
                                    <sizing>
                                        <horizontal method="fixed">20</horizontal>
                                    </sizing>
                                </button>
                                <label id="label_start_mode">
                                    <text>Start run by </text>
                                    <color>#000000</color>
                                    <margins>
                                        <left>4</left>
                                    </margins>
                                </label>
                            </children>

                            <margins>
                                <top>4</top>
                            </margins>
                            <vertical-alignment>center</vertical-alignment>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <text-box id="textbox_timeout">
                                    <sizing>
                                        <vertical method="fixed">20</vertical>
                                        <horizontal method="fixed">30</horizontal>
                                    </sizing>
                                </text-box>
                                <label>
                                    <text>Timeout in seconds</text>
                                    <color>#000000</color>
                                    <margins>
                                        <left>4</left>
                                    </margins>
                                </label>
                            </children>
                            <margins>
                                <top>4</top>
                            </margins>
                            <vertical-alignment>center</vertical-alignment>
                        </flow-layout>

                        <!-- start button -->
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="btn_start">
                                    <text>Â§aÂ§lSTART</text>
                                    <margins>
                                        <top>4</top>
                                    </margins>
                                </button>
                            </children>
                        </flow-layout>

                    </children>

                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <padding>
                        <all>10</all>
                    </padding>
                    <surface>
                        <panel dark="false"/>
                    </surface>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
        </flow-layout>
    </components>
</owo-ui>